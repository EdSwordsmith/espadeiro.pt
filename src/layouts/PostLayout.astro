---
import Layout from "./Layout.astro";

export interface Props {
    frontmatter: {
        title: string;
        image?: string;
        description?: string;
    };
}

const { frontmatter: { title, image, description } } = Astro.props as Props;
const seoImage = image || "";
const desc = description || "";
---

<Layout image={seoImage} title={title} description={desc}>
    <div class="hero is-dark">
        <div class="hero-head">
            {image && <figure class="image"><img src={image} alt={title}></figure>}
        </div>

        <div class="hero-body">
            <div class="container content is-max-desktop">
                <p class="title is-2">
                    {title}
                </p>

                <slot />
            </div>
        </div>
    </div>
</Layout>
