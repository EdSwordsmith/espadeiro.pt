---
import "../styles/styles.scss";

import Navbar from "../components/Navbar.svelte";
import Footer from "../components/Footer.astro";

export interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const site = import.meta.env.SITE;

const imageUrl = (image: string) => {
    const url = site.replace(/\/$/, "");
    return image.includes("http") ? image : `${url}${image}`;
}

const props = Astro.props as Props;
const title = props.title ? `${props.title} | Eduardo Espadeiro` : "Eduardo Espadeiro";
const seoTitle = props.title || "Eduardo Espadeiro";
const description = props.description || "";
const image = imageUrl(props.image || "/edu.jpg");
---

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={site}>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Eduardo Espadeiro">
    <meta property="og:title" content={seoTitle}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={image}>

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@EdSwordsmith">
    <meta name="twitter:title" content={seoTitle}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={image}>
</head>

<body>
    <Navbar client:load />
    <slot />
    <Footer />
</body>
</html>