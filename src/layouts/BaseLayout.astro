---
import "@fontsource-variable/jetbrains-mono";

import fetchWebringURLs from "../utils/webring";

const webringURLs = await fetchWebringURLs();
webringURLs.prev.name = webringURLs.prev.name.split(" ")[0];
webringURLs.next.name = webringURLs.next.name.split(" ")[0];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <title>Eduardo Espadeiro</title>
  </head>
  <body
    class="flex flex-col items-center bg-slate-100 font-mono dark:bg-slate-900 dark:text-white"
  >
    <div class="w-full max-w-4xl">
      <header class="align-center my-4 flex w-full justify-center text-xl">
        <a href="/" class="mx-4 hover:underline">Home</a>
        <a
          href="https://cv.espadeiro.pt/"
          class="mx-4 hover:underline"
          target="_blank">CV</a
        >
        <a href="/blog/" class="mx-4 hover:underline">Blog</a>
      </header>

      <slot />

      <footer class="align-center my-4 flex w-full justify-between text-xl">
        <a href={webringURLs.prev.url} class="mx-4 hover:underline"
          >{webringURLs.prev.name}'s website</a
        >
        <a
          href="https://pombosmalvados.github.io/webring/"
          class="mx-4 hover:underline">our webring</a
        >
        <a href={webringURLs.next.url} class="mx-4 hover:underline"
          >{webringURLs.next.name}'s website</a
        >
      </footer>
    </div>
  </body>
</html>
